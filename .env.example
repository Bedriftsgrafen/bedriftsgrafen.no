# Application Settings
APP_NAME=bedriftsgrafen.no
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# Environment (development, staging, production)
ENVIRONMENT=development

# Admin API Key (required in production to access /admin/* endpoints)
# Generate with: openssl rand -hex 32
ADMIN_API_KEY=

# Frontend Settings
STREAMLIT_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Database Settings
DATABASE_HOST=bedriftsgrafen-db
DATABASE_PORT=5432
DATABASE_NAME=bedriftsgrafen
# Use dedicated app user 'admin', NOT 'postgres' superuser (security best practice)
DATABASE_USER=admin
DATABASE_PASSWORD=your-database-password-here
DATABASE_URL=postgresql://admin:your-database-password-here@bedriftsgrafen-db:5432/bedriftsgrafen

# Alternative async database URL for FastAPI
DATABASE_URL_ASYNC=postgresql+asyncpg://admin:your-database-password-here@bedriftsgrafen-db:5432/bedriftsgrafen

# Database Connection Pool Settings (for production)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=5
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_STATEMENT_TIMEOUT=60000

# CORS Settings
CORS_ORIGINS=https://bedriftsgrafen.no,http://bedriftsgrafen.no
CORS_ALLOW_CREDENTIALS=True

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Settings (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password-here
SMTP_FROM=noreply@bedriftsgrafen.no

# Redis (optional - for caching/sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your-redis-password-here

# Docker Volumes & Paths
# Path where PostgreSQL data will be stored. Defaults to ./postgres_data
POSTGRES_DATA_PATH=./postgres_data

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# External APIs
# Brønnøysundregistrene API (Open Data)
BRONNOYSUND_API_BASE_URL=https://data.brreg.no/enhetsregisteret/api

# Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Affiliate Marketing (optional)
# Adtraction API key for affiliate tracking
ADTRACTION_API_KEY=
